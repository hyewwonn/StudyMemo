<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="5dp">
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:src="@drawable/back"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:id="@+id/btnBack"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"/>
    </LinearLayout>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnFolder"
        android:layout_marginLeft="30dp"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/plus"
                android:background="@drawable/addimg"
                android:padding="2dp"
                android:id="@+id/btnAddimg"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="gone"
                android:background="@drawable/addimg"
                android:padding="2dp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="gone"
                android:background="@drawable/addimg"
                android:padding="2dp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="gone"
                android:background="@drawable/addimg"
                android:padding="2dp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="gone"
                android:background="@drawable/addimg"
                android:padding="2dp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="gone"
                android:background="@drawable/addimg"
                android:padding="2dp"/>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="110dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_margin="10dp"
            android:text="속지변경"
            android:textSize="12dp"
            android:layout_weight="1"
            android:background="@drawable/radius20"
            android:id="@+id/btnBgcolor"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_margin="10dp"
            android:text="글자크기"
            android:textSize="12dp"
            android:layout_weight="1"
            android:background="@drawable/radius20"
            android:id="@+id/btntxtsize"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_margin="10dp"
            android:text="글자색"
            android:textSize="12dp"
            android:layout_weight="1"
            android:background="@drawable/radius20"
            android:id="@+id/btntxtcolor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/radius30"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:id="@+id/linMemo">

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="제목"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <EditText
                android:id="@+id/edtContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="내용 입력"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="@android:color/transparent"/>
        </ScrollView>
        </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:text="저장하기"
        android:textSize="14dp"
        android:background="@drawable/radius20"
        android:id="@+id/btnSave"/>
</LinearLayout>